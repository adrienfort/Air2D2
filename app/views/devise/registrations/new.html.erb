<div class="container-signup">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signup"}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs text-center">
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "name" },
                  label_html: { class: "user-label" }
                  %>
      <%= f.input :species,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "species" },
                  label_html: { class: "user-label" }%>
      <%= f.input :planet,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "planet" },
                  label_html: { class: "user-label" }%>
      <%= f.input :radio_frequency,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "radio_frequency" },
                  label_html: { class: "user-label" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label_html: { class: "user-label" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" },
                  label_html: { class: "user-label" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" },
                  label_html: { class: "user-label" } %>
      <%= f.input :photo, as: :file %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
